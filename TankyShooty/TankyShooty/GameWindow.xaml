<Window x:Class="TankyShooty.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankyShooty"
        mc:Ignorable="d"
        Title="GameWindow" Height="1000" Width="1000" 
        ResizeMode="CanResize"
        WindowStartupLocation="Manual"
        Left="10" Top="10"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Canvas Name="MyCanvas" Focusable="True" KeyDown="OnKeyDown" KeyUp="OnKeyUp">

            <Rectangle Name="Player1" Height="50" Width="50" Fill="Blue" Canvas.Left="900" Canvas.Top="900">
                <Rectangle.RenderTransform>
                    <RotateTransform x:Name="rectangleRotatePlayer1" Angle="-90" CenterX="25" CenterY="25"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle Name="Player2" Height="50" Width="50" Fill="Red" Canvas.Left="25" Canvas.Top="10">
                <Rectangle.RenderTransform>
                    <RotateTransform x:Name="rectangleRotatePlayer2" Angle="90" CenterX="25" CenterY="25"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label Name="player1NameDisplay" Content="Player1" Foreground="Black" FontSize="30" Canvas.Left="581" Canvas.Top="901" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="100"/>
            <Label Name="player2NameDisplay" Content="Player1" Foreground="Black" FontSize="30" Canvas.Left="313" Canvas.Top="901" HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Right" Panel.ZIndex="100"/>


            <Label Name="rotation" Content="" Foreground="Black" FontSize="10" Canvas.Left="132" Canvas.Top="40" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="scoreText" Content="0 - 0" Foreground="Black" FontSize="70" Canvas.Left="424" Canvas.Top="874" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="100"/>

        </Canvas>

    </Grid>
</Window>
