<Window x:Class="TankyShooty.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankyShooty"
        mc:Ignorable="d"
        Title="GameWindow" Height="500" Width="500" ResizeMode="NoResize">
    <Grid>
        <Canvas Name="MyCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
            <Rectangle Name="Player1" Height="50" Width="50" Fill="Blue" Canvas.Left="40" Canvas.Top="40"/>
            <Rectangle Name="Player2" Height="50" Width="50" Fill="Red" Canvas.Left="410" Canvas.Top="410"/>

            <Label Name="scoreText" Content="0 - 0" Foreground="White" FontSize="30" Canvas.Left="215" Canvas.Top="400"/>
        </Canvas>
    </Grid>
</Window>
