<Window x:Class="TankyShooty.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankyShooty"
        mc:Ignorable="d"
        Background="Black"
        Title="LobbyWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="244*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>

        <TextBlock FontFamily="Impact" Foreground="Crimson" FontSize="32" TextAlignment="Center" Canvas.Left="274" TextWrapping="Wrap" Text="Skin Választó" Canvas.Top="53" Height="46" Width="252" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock FontFamily="Impact" Foreground="White" FontSize="32" TextAlignment="Center" Canvas.Left="274" TextWrapping="Wrap" Text="VS" Canvas.Top="53" Height="46" Width="252" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1"/>


        <ListBox x:Name="CarouselListBox1" Height="200" Width="268"
                 ItemsSource="{Binding Images}" 
                 SelectedIndex="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 Grid.Row="1" Grid.Column="0">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5">
                        <Image Width="250" Height="150" Source="{Binding}"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox x:Name="CarouselListBox2" Height="200" Width="268"
         ItemsSource="{Binding Images}" 
         SelectedIndex="0"
         ScrollViewer.HorizontalScrollBarVisibility="Hidden"
         HorizontalAlignment="Center" VerticalAlignment="Center"
         Grid.Row="1" Grid.Column="2">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5">
                        <Image Width="250" Height="150" Source="{Binding}"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10" Width="100" Grid.Row="2" Grid.Column="0">
            <Button Background="Crimson" Content="◀" Click="Previous_Click1" Width="50"/>
            <Button Background="Crimson" Content="▶" Click="Next_Click1" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10" Width="100" Grid.Row="2" Grid.Column="2">
            <Button Background="Blue" Content="◀" Click="Previous_Click2" Width="50"/>
            <Button Background="Blue" Content="▶" Click="Next_Click2" Width="50"/>
        </StackPanel>


        <TextBlock Grid.Row="0" Text="Játékos - 1" Foreground="AliceBlue" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" FontSize="16"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Játékos - 2" Foreground="AliceBlue" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" FontSize="16"/>

        <TextBox TextAlignment="Center" FontFamily="Impact" FontSize="28" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Foreground="Crimson" Background="Transparent" VerticalAlignment="Top" Margin="0,59,257,0" Height="58"/>
        <TextBox TextAlignment="Center" FontFamily="Impact" FontSize="28" Grid.Row="0" Grid.Column="1" Foreground="Blue" Background="Transparent" VerticalAlignment="Top" Margin="257,59,0,0" Height="58" Grid.ColumnSpan="2"/>


        <Button Background="Crimson" Name="BtnReady" FontFamily="Impact" Content="Játék" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Height="45" Margin="0,155,0,0" Click="BtnReady_Click"/>
        <Button Background="Blue" Foreground="White" Name="BtnClose" FontFamily="Impact" Content="Vissza a Főmenübe" Canvas.Left="365" Canvas.Top="376" Click="BtnClose_Click" Grid.Row="2" Grid.Column="1" Margin="41,44,41,43"/>

    </Grid>
</Window>
